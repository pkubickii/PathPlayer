<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>

<GridPane fx:controller="pl.pkubicki.PrimaryController" xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10" styleClass="root">
   <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
   <gridLinesVisible>true</gridLinesVisible>
   <Text id="welcome-text" text="Path Player 1.0 Welcome"
         GridPane.columnIndex="0" GridPane.rowIndex="0"
         GridPane.columnSpan="2"/>
   <HBox GridPane.columnIndex="0" GridPane.rowIndex="1">
      <Button fx:id="loadButton" text="Load Ontology" onAction="#showOwl"/>
   </HBox>
   <HBox GridPane.columnIndex="1" GridPane.rowIndex="1">
      <Button fx:id="saveButton" text="Save Ontology" onAction="#saveOwl"/>
   </HBox>
<HBox GridPane.columnIndex="0" GridPane.rowIndex="2">
   <Button fx:id="loadTestOwl" text="Load TestOWL" onAction="#loadTestOWL"/>
</HBox>
   <HBox GridPane.columnIndex="0" GridPane.rowIndex="2">
      <Button fx:id="emptyOwl" text="Create EmptyOWL" onAction="#createEmptyOWL"/>
   </HBox>
</GridPane>
